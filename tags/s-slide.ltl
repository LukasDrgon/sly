s-rel ={_html}

+css

  s-slide {
    position: absolute;
    display: block;
    top: 1%;
    left: 10%;
    width: 80%;
    height: 98%;
  }

  s-slide._slyBefore {
    left: -2%;
    opacity: 0.2;
  }

  s-slide._slyAfter {
    left: 91%;
    opacity: 0.2;
  }

  s-slide._slyHidden {
    opacity: 0;
  }

  s-rel {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
  }

  s-slide._slyReady {
    transition: opacity 0.4s, left 0.5s;
  }
